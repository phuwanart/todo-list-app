<%= form_with model: todo do |form|  %>

  <div>
    <%= form.label :priority %> <br>
    <%= form.select :priority, [["Low", :low], ["Medium", :medium], ["High", :high]] %>
  </div>

  <div>
    <%= form.label :title %> <br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :detais %> <br>
    <%= form.text_area :details %>
  </div>

  <div>
    <%= form.check_box :completed %>
    <%= form.label :completed %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>

